% TDC %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% Añadir autores a la lista TOC
%% Se agregan autores como un par adicional de corchetes en el título, ejemplo:
%% \startsection[title={Something}][autores={{John Smith, MD},{Micke Stronberg, MD},{Uma Thurman, MD}}]
\newdimen\SectionTocEntryWidth
\SectionTocEntryWidth=0.6cm
\define[1]\SectionTocEntry{
  #1
  \doifnot{\rawstructurelistuservariable{autores}}
    {}
    {
      \\
      \start
      \setupalign[flushleft,nothyphenated,verytolerant]
      \switchtobodyfont[9pt]
      \hskip\SectionTocEntryWidth\commalistsentence[\rawstructurelistuservariable{autores}][{,\space},{\space y~}]
      \stop
    }
}

