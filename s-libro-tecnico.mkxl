% Autores de capitulo
\def\SectionAuthor{\dosingleempty\doSectionAuthor}
\def\doSectionAuthor[#1]#2{%
  \start\switchtobodyfont[10pt]%
  \doifsomethingelse{#1}
    {\emph{#2}\\\switchtobodyfont[8pt] #1}
    {\emph{#2}}
  \stop\par%
}

